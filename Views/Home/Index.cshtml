@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Product</h1>
    <form action="">
        <div class="row">
            <div class="form-group col-md-8">
                <label for="text">Search</label>
                <input type="text" name="name" class="form-control input-md" ng-model="search" placeholder="Search by Product Name or ID">
            </div>
            <div class="form-group col-md-4">
                <label for="text">Sort By</label>
                <select name="" id="" class="form-control input-md" >
                   
                    <option value="">Default </option>
                    <option value="">Product Name A-Z</option>
                    <option value="">Product Name Z-A</option>
                </select>
            </div>
        </div>
    </form>
    <div class="container">
        <table class="table table-striped table-bordered table-condensed table-responsive">
            <thead>
                <tr>
                    <th class="col-sm-1"> Sl.no</th>
                    <th class="col-sm-5"> Product Name</th>
                    <th class="col-sm-5"> Category Name</th>
                
                    <th class="col-sm-1">Edit</th>
                    <th class="col-sm-1"><span class="glyphicon glyphicon-trash"></span></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat='n in myData| filter: search '>
                    <td>{{$index+1}}</td>
                    
                    <td>{{n.pName}}</td>
                    <td>{{n.name}}</td>
                    <td><button class="btn btn-primary col-sm-12" ng-click=""> Edit</button> </td>
                    <td>
                        <a href="#" class="btn btn-danger btn-sm-12" ng-click="DeleteData(n.id)"><span class="glyphicon glyphicon-trash"></span></a>
           
                    </td>
                </tr>

            </tbody>
        </table>


        <ul class="pagination">
            <li class="disabled">
                <a href="#"><< </a>

            </li>
            <li class="active"><a href="#">1</a></li>
            <li class="disabled"><a href="#"> >> </a></li>
        </ul>

        <div>
            <form action="" class="form-inline">
                <label for=""> Show </label>

                <select name="" id="" class="form-control input-sm" style="border-radius:11%;">
                    <option value="">10</option>
                    <option value="">20</option>
                    <option value="">30</option>
                </select>
                <label for="">
                    results Per Page
                </label>
            </form>
            <label for="">
                Total 4 results found/Showing page 1 of 1
            </label>
        </div>
    </div>
   
    <div class="pull-right"> <a class="btn btn-primary add-btn" style="border-radius:50%" href="#" data-backdrop="static" data-toggle="modal" ng-click="initNewEmployee()" data-target="#employeeWriterModal">+</a></div>

    <div Id="EmployeeForm" action="/Employees/Save" method="post">
       
        <div id="employeeWriterModal" class="modal fade" role="dialog" style="height:600px" >
            <div class="modal-dialog">

                <div class="modal-content">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Product</h4>
                        </div>
                        <form method="post" action="">
                        <div class="modal-body">
                            <div class="container" >
                                <div class="f-group">
                                        <label>Product</label>
                                        <input type="text" ng-model="save.pName" placeholder="Product Name" required />
                                        
                                </div>
                                <div class="f-group">
                                        <label>Category</label>
                                        <select width="200px" height="40px" border="1px" ng-model="save.name" placeholder="Select category">
                                            <option value="" disabled>--select category--</option>
                                            <option ng-repeat="n in myData">{{n.name}}</option>
                                          
                                        </select>
                                     
                                </div>
                                
                            </div>
                        
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-success" value="Save" ng-click="Savechanges()" />
                            <button type="button" ng-disabled="saving" class="btn btn-danger" ng-click="resetEmployee()" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
